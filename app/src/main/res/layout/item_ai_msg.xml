<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_ai_msg"
        android:layout_width="0dp"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape_main_theme_btn"
        android:textColor="@color/white"
        android:text="您好，请问有什么可以帮助您的吗？"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_copy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"/>
    <ImageButton
        android:id="@+id/btn_copy"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_copy"
        android:scaleType="fitCenter"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/tv_ai_msg"
        android:background="@drawable/shape_cycle"
        android:backgroundTint="@color/light_gray"
        app:layout_constraintLeft_toRightOf="@+id/tv_ai_msg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>