<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <GridLayout
                android:id="@+id/browse_action_bar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/main_theme"
                android:columnCount="4"
                android:rowCount="1"
                android:padding="5dp"
                android:orientation="vertical">
                <ImageButton
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/icon_ar_glasses"/>
                <LinearLayout
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="left|center"
                    android:minWidth="100dp"
                    tools:ignore="RtlHardcoded">
                    <TextView
                        android:id="@+id/tv_notebookName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AR笔记"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#333"/>
                    <TextView
                        android:id="@+id/tv_notebookNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="SpaceTime，让文字穿越时空" />
                </LinearLayout>
            </GridLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_ar_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="0dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>
        </LinearLayout>
        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/multiple_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_addButtonColorNormal="@color/main_theme"
            fab:fab_addButtonColorPressed="@color/main_theme_dark"
            fab:fab_addButtonSize="normal"
            fab:fab_addButtonStrokeVisible="false"
            fab:fab_expandDirection="up"
            android:layout_marginEnd="16dp"
            android:layout_gravity="right"
            tools:ignore="RtlHardcoded"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_ar_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/white"
                fab:fab_colorPressed="@color/pressed_gray"
                fab:fab_icon="@drawable/icon_ar_glasses"
                fab:fab_title="label"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_ar_create_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/white"
                fab:fab_icon="@drawable/icon_edit"
                fab:fab_size="normal"
                fab:fab_colorPressed="@color/pressed_gray"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_screenshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/white"
                fab:fab_size="normal"
                fab:fab_colorPressed="@color/pressed_gray"/>

        </com.getbase.floatingactionbutton.FloatingActionsMenu>

        <ImageView
            android:id="@+id/img_screenshot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>
    </RelativeLayout>

</LinearLayout>