          android:layout_marginBottom="6sp"
          android:contentDescription="@null"
        android:background="@drawable/editor_justify_center" />

      <ImageButton
        android:id="@+id/action_align_right"
          android:layout_width="36dp"
          android:layout_height="36dp"
          android:layout_marginEnd="6sp"
          android:layout_marginTop="6sp"
          android:layout_marginBottom="6sp"
          android:contentDescription="@null"
        android:background="@drawable/editor_justify_right" />

      <ImageButton
        android:id="@+id/action_insert_bullets"
          android:layout_width="36dp"
          android:layout_height="36dp"
          android:layout_marginEnd="6sp"
          android:layout_marginTop="6sp"
          android:layout_marginBottom="6sp"
        android:contentDescription="@null"
        android:background="@drawable/editor_bullets" />

      <ImageButton
        android:id="@+id/action_insert_numbers"
          android:layout_width="36dp"
          android:layout_height="36dp"
          android:layout_marginEnd="6sp"
          android:layout_marginTop="6sp"
          android:layout_marginBottom="6sp"
        android:contentDescription="@null"
        android:background="@drawable/editor_numbers" />

      <ImageButton
        android:id="@+id/action_blockquote"
          android:layout_width="36dp"
          android:layout_height="36dp"
          android:layout_marginEnd="6sp"
          android:layout_marginTop="6sp"
          android:layout_marginBottom="6sp"
          android:contentDescription="@null"
        android:background="@drawable/editor_blockquote" />

      <ImageButton
        android:id="@+id/action_insert_image"
          android:layout_width="36dp"
          android:layout_height="36dp"
          android:layout_marginEnd="6sp"
          android:layout_marginTop="6sp"
          android:layout_marginBottom="6sp"
          android:contentDescription="@null"
        android:background="@drawable/editor_insert_image" />

      <ImageButton
        android:id="@+id/action_insert_audio"
          android:layout_width="36dp"
          android:layout_height="36dp"
          android:layout_marginEnd="6sp"
          android:layout_marginTop="6sp"
          android:layout_marginBottom="6sp"
          android:contentDescription="@null"
        android:background="@drawable/editor_music" />

      <ImageButton
        android:id="@+id/action_insert_video"
          android:layout_width="36dp"
          android:layout_height="36dp"
          android:layout_marginEnd="6sp"
          android:layout_marginTop="6sp"
          android:layout_marginBottom="6sp"
          android:contentDescription="@null"
        android:background="@drawable/editor_video" />

      <ImageButton
        android:id="@+id/action_insert_youtube"
          android:layout_width="36dp"
          android:layout_height="36dp"
          android:layout_marginEnd="6sp"
          android:layout_marginTop="6sp"
          android:layout_marginBottom="6sp"
          android:contentDescription="@null"
        android:background="@drawable/editor_youtube" />

      <ImageButton
        android:id="@+id/action_insert_link"
          android:layout_width="36dp"
          android:layout_height="36dp"
