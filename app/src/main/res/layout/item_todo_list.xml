<?xml version="1.0" encoding="utf-8"?>
<edu.whu.spacetime.widget.SwipeListLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/selector_list_item">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_todo_deleteItem"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:text="删除"
            android:textSize="20dp"
            android:textColor="@color/pdf_red"
            android:background="@drawable/shape_red_border"
            android:drawableLeft="@drawable/icon_delete"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_todo">
        <CheckBox
            android:id="@+id/ckBox_todo_ok"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="1"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:layout_gravity="center|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|right"
            android:layout_weight="9"
            tools:ignore="RtlHardcoded">
            <TextView
                android:id="@+id/tv_todo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="事件"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_todo_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center|left"
                    android:textSize="16sp"
                    android:text="时间"/>

                <TextView
                    android:id="@+id/tv_todo_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center|right"
                    android:textSize="16sp"
                    android:text="地点"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</edu.whu.spacetime.widget.SwipeListLayout>